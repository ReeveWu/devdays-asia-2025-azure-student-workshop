# Azure Blob Storage 配置
REACT_APP_AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
REACT_APP_AZURE_STORAGE_CONTAINER_NAME=videos
REACT_APP_AZURE_STORAGE_SAS_TOKEN="your_sas_token_here"

# Azure OpenAI 配置
REACT_APP_AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
REACT_APP_AZURE_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1-mini
REACT_APP_AZURE_OPENAI_API_VERSION=2024-10-21

# 影片處理 API 配置
REACT_APP_VIDEO_PROCESSOR_ENDPOINT=https://your-video-processor.azurewebsites.net/api/index_video
REACT_APP_VIDEO_PROCESSOR_DELETE_ENDPOINT=https://your-video-processor.azurewebsites.net/api/delete_video
REACT_APP_VIDEO_PROCESSOR_QUERY_ENDPOINT=https://your-video-processor.azurewebsites.net/api/query_video

# 開發模式配置 (true/false) - 設為 false 以使用 mock 資料
REACT_APP_ENABLE_REAL_STORAGE_UPLOAD=true
REACT_APP_ENABLE_REAL_OPENAI=true
REACT_APP_ENABLE_REAL_TRANSCRIPTION_API=false
REACT_APP_ENABLE_REAL_VIDEO_PROCESSING=true

# Mock 資料配置
REACT_APP_MOCK_DELAY_MS=30
REACT_APP_STREAMING_DELAY_MS=20
